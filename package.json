  "bugs": {
    "url": "https://github.com/tcort/tcbbcode/issues"
  },
  "homepage": "https://github.com/tcort/tcbbcode#readme",
  "devDependencies": {
    "jest": "^27.0.4",
    "uglify-js": "^3.13.9"
  },
  "jest": {
    "testRegex": "\\.test.js$",
    "testPathIgnorePatterns": [
      "/node_modules/"
